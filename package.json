{
  "name": "chesslogic",
  "version": "0.0.1",
  "description": "a JS chess engine",
  "main": "src/index.js",
  "scripts": {
    "test": "jest --watch",
    "dev": "concurrently \"webpack --watch --config config/webpack.dev.config.js\" \"npm run test\"",
    "start": "node dist/main.bundle.js",
    "build": "webpack --config config/webpack.prod.config.js",
    "git": "git add . && git commit -m 'changes' && git push origin master"
  },
  "keywords": [
    "chess",
    "logic",
    "engine"
  ],
  "author": "Vindao (Vincent Schmitt)",
  "license": "ISC",
  "devDependencies": {
    "@types/jest": "^24.0.17",
    "concurrently": "^4.1.1",
    "jest": "^24.8.0",
    "jest-preset-typescript": "^1.2.0",
    "run-node-webpack-plugin": "^1.2.2",
    "ts-jest": "^24.0.2",
    "ts-loader": "^9.4.2",
    "typescript": "^3.5.3",
    "webpack": "^5.75.0",
    "webpack-cli": "^5.0.1"
  },
  "jest": {
    "roots": [
      "src"
    ],
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "globals": {
      "ts-jest": {
        "tsConfig": {
          "lib": [
            "es2015",
            "es2017",
            "dom"
          ]
        }
      }
    }
  }
}
